{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "plugins": [
    "vue"
  ],
  "rules": {
    "no-extra-semi": "off",
    "vue/v-bind-style": "off",
    "vue/v-on-style": "off",
    "vue/name-property-casing": "off"
  }
}
